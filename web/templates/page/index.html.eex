<div class="row">
  <%= for board <- @boards do %>
    <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
      <div class="card category">
        <div class="card-block">
          <a href="/category/<%= board.id %>">
            <h4 class="card-title"><%= board.name %></h4>
          </a>
        </div>
      </div>
    </div>
  <% end %>
</div>
